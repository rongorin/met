@model IEnumerable<MetopeMVCApp.Models.Debt_Expiry_Profile>
@using GridMvc.Html
@{
    ViewBag.Title = "DebtExpiryProfile";
    List<string> _sizes = new List<string>() { "10", "20", "50", "100" };
} 
@section Styles {
    @Styles.Render("~/Content/GridMvc")
    @Styles.Render("~/Content/datetime")
    <link href="~/Content/cssNoLines.css" rel="stylesheet" />
}
@helper CustomRenderingOfColumn(MetopeMVCApp.Models.Party_Debt_Analysis pd)
{
    if (pd.Entity_ID== 1)
    {
        <text> </text>
    }
    else
    {
        <text> </text>
    }
} 
<h2>Debt Expiry Profile</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>  
@Html.Partial("_MsgSuccesFail", Model) 

<div class="code-cut">
    @Html.Grid(Model).Named("depGrid").Columns(columns =>
    {
        columns.Add(c => c.Party_Code)
            .Titled("Party").Filterable(true)
            .SetWidth(100); 

        columns.Add(c => c.Financial_Year_End).Titled("Financials Date").Filterable(true).SetWidth(150).Format("{0:dd MMM yyyy}");

        columns.Add(c => c.Expiring_Debt_Amount).Titled("Expiring Debt Amount").Css("text-right").Filterable(false)
                .RenderValueAs(x => String.Format("<span class=\"pull-right\">{0:0,0.00}</span>", x.Expiring_Debt_Amount)).Encoded(false)
                .Sanitized(false)
                .SetWidth(140);  
        columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(20)
        .RenderValueAs(c => @<u>
            @Html.ActionLink("Edit", "Edit", "DebtExpiryProfile", new { EntityId = c.Entity_ID, PartyCode = c.Party_Code, FinYearEnd = c.Financial_Year_End }, null)
        </u>);
        columns.Add()
     .Encoded(false)
     .Sanitized(false)
     .SetWidth(20)
     .RenderValueAs(c => @<u>
        @Html.ActionLink("Delete", "Delete", "DebtExpiryProfile", new { EntityId = c.Entity_ID, PartyCode = c.Party_Code, FinYearEnd = c.Financial_Year_End }, null)
    </u>);


    }).WithPaging(15).Sortable(true)

</div>
@section Scripts { @Scripts.Render("~/bundles/datetime")
@Scripts.Render("~/bundles/GridMvc")
<script> 
    $(function () {
        pageGrids.depGrid.onRowSelect(function (e) {
            //here rather do full page load instead of the Ajax partial:
            var myUrl2 = mtpApp.Urls.baseUrl + "DebtExpiryProfile/Edit?PartyCode="+e.row.Party_Code + "&FinYearEnd="+ e.row.Financial_Year_End  + "&EntityId="+ @ViewBag.EntityId ;
            window.location = myUrl2;
        });  
    });
</script>

}

 