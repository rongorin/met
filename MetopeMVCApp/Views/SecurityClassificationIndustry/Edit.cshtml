@model Metope.DAL.Security_Classification_Industry
 
@{
    ViewBag.Title = "Edit";
}
@section Styles {
    @Styles.Render("~/Content/datetime")
}

<h3>
    Edit Security Classification Industry for security <b> @Model.Security_Detail.Short_Name </b>
</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal"> 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Classification_Code)

        @Html.HiddenFor(model => model.Effective_Date)

        @Html.HiddenFor(model => model.Industry_Code)

        @Html.HiddenFor(model => model.Security_ID) 
 
        @Html.EditorForModel(new { MeDisabled = "readonly" })
        <div class="col-md-offset-2 col-md-9">
            <p>(Cannot make changes.) </p> 
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
} 
<hr />
@Html.ActionLink("Back to List", "Index", "SecurityClassificationIndustry", new { SecurityId = Model.Security_ID }, null)
