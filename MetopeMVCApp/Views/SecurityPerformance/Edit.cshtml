@model Metope.DAL.Security_Performance

@{
    ViewBag.Title = "Edit";
}
@section Styles {
    @Styles.Render("~/Content/datetime")
}


<h3>
    Edit Security Performance for <b> @Model.Portfolio_Code </b> 
</h3> 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>for security @Model.Security_Detail.Security_Name</h4>
        <hr />
        @Html.ValidationSummary(false )
        @Html.HiddenFor(model => model.Security_ID) 
        @Html.HiddenFor(model => model.Portfolio_Code) 
        @Html.HiddenFor(model => model.Entity_ID)

        @Html.EditorForModel(new { MeDisabled = "readonly" })
    </div>
}
 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
}
 
