{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(false)
        @Html.ValidationMessage("Error")

        @Html.HiddenFor(model => model.Entity_ID)
        @Html.HiddenFor(model => model.Month_Year) 
        @Html.HiddenFor(model => model.Security_ID) 
         
        @Html.EditorForModel(new { MeDisabled = "readonly" })
         
        <div>
            @Html.ActionLink("Back to List", "Index", new { SecurityId = Model.Security_ID }, null)
