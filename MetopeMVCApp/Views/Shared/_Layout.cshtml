@using StackExchange.Profiling;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Metope Application</title>
    <meta name="description" content="Metope Application" />
    @Styles.Render("~/bundles/css") 
    @Scripts.Render("~/bundles/modernizr")   
    @RenderSection("styles", false)


    <script type="text/javascript"> 
        var mtpApp = mtpApp || {};
        mtpApp.Urls = mtpApp.Urls || {};
        mtpApp.Urls.baseUrl = '@Url.Content("~")';  
    </script>
  
</head>
<body ng-app >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("METOPE", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Support", "Support", "Home")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--my header-->
    <div id="myHeader">
        @RenderSection("HeaderPhoto", required: false)

    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - Intuitive Digital</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jqueryThings")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
    @MiniProfiler.RenderIncludes()

</body>

</html> 

 <script type='text/javascript'>

    $(document).ready(function () {
        $('.dropdown-submenu a.test').on("click", function (e) { 
            $(this).next('ul').toggle();
            e.stopPropagation();
            e.preventDefault();
        });
    });

</script>