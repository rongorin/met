@model List<MetopeMVCApp.Models.SecurityListVM>
@{
    var display = "";
    
    for (int i = 0; i < 15 && i < Model.Count; i++)
    {
        display += Model[i].Security_Ticker + ", ";
    }
    if (display.Contains(","))
    {
        display = display.Remove(display.LastIndexOf(","));
    }
    if (Model.Count > 15)
    {
        display = display + ", " + (Model.Count - 15).ToString() + " more.";
    }
}
