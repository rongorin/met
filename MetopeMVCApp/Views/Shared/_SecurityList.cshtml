@model List<MetopeMVCApp.Models.SecurityListVM>
@{
    var display = "";
    
    for (int i = 0; i < 3 && i < Model.Count; i++)
    {
        display += Model[i].Security_Name + ", ";
    }
    if (display.Contains(","))
    {
        display = display.Remove(display.LastIndexOf(","));
    }
    if (Model.Count > 3)
    {
        display = display + ", " + (Model.Count - 3).ToString() + " more.";
    }
}
