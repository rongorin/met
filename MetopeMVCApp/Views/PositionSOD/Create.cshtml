@model Metope.DAL.Position_SOD

@{
    ViewBag.Title = "Create";
}
@section Styles {
    @Styles.Render("~/Content/datetime")
}
<h2>Create Position for <b>@ViewBag.myPortfolioCode</b></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal"> 
        <hr />
        @Html.ValidationSummary(false)
        @Html.ValidationMessage("Error")

        <div class="form-group">
            @Html.LabelFor(model => model.Portfolio_Code, htmlAttributes: new { @class = "control-label col-md-2 input-sm" })
            <div class="col-md-10">
                @Html.DropDownList("Portfolio_Code", null, string.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Portfolio_Code, "", new { @class = "text-danger" })
            </div>
        </div> 
 
        @Html.EditorForModel() 
        <div>
            @Html.ActionLink("Back to List", "Index", new { PortfolioCode = ViewBag.myPortfolioCode }, null)
        </div> 
    </div>
} 
 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
} 