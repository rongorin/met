@model Metope.DAL.Security_Performance_History

@{
    ViewBag.Title = "Edit";
}
@section Styles {
    @Styles.Render("~/Content/datetime")
}

<h3>
    Edit Security Performance History for portfolio <b> @Model.Portfolio_Code </b>
</h3> 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>for security <b>@Model.Security_Detail.Security_Name</b></h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Security_ID)

        @Html.HiddenFor(model => model.Portfolio_Code)

        @Html.HiddenFor(model => model.Entity_ID)
        @Html.HiddenFor(model => model.Record_Date)

        @Html.EditorFor(model => model.Record_Date, "BootstrapEditDateVertic", new { MeDisabled = "readonly" })

        @*history uses same editor template*@
        @Html.EditorForModel(new { MeDisabled = "readonly" }) 
         
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
}
 
