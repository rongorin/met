@model MetopeMVCApp.Models.Party_Debt_Analysis

@{
    ViewBag.Title = "Edit";
}
@section Styles {
    @Styles.Render("~/Content/datetime")
}
 
<h4></h4>
<h3>Editing Party Debt Analysis code<b> @Model.Party_Code </b>
        @if (Model.Financials_Type == "I")
        {   <span>(Interim)</span>  }
        else
        {   <span>(Final)</span>  } 

</h3>  

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal"> 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Party_Code) 
        @Html.HiddenFor(model => model.Financials_Type) 
        @Html.HiddenFor(model => model.Entity_ID)
        @Html.EditorForModel(new {meDisabled = "readonly" }) 

    </div>
}
 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
}
