@model Metope.DAL.Security_Attribution

@{
    ViewBag.Title = "Edit";
}

<h3>
    Edit Security Attribution for portfolio <b> @Model.Portfolio_Code </b>
</h3> 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>for security <b>@Model.Security_Detail.Security_Name</b></h3>
        <hr />
        @Html.ValidationSummary(false)
        @Html.HiddenFor(model => model.Security_ID)
        @Html.HiddenFor(model => model.Portfolio_Code)
        @Html.HiddenFor(model => model.Entity_ID)

        @Html.EditorForModel(new { MeDisabled = "readonly" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetime")
}
 